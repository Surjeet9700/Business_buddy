{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "lib": [
            "esnext"
        ],
        "moduleResolution": "node",
        "strict": true,
        "importHelpers": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@prisma-client": [
                "./prisma/generated/client"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ]
}