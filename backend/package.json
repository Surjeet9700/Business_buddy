{
  "name": "backend",
  "module": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "build": "bun build ./src/server.ts --outdir ./dist --target node",
    "prisma:generate": "bun --bun ./node_modules/.bin/prisma generate",
    "prisma:push": "bun --bun ./node_modules/.bin/prisma db push"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "@prisma/extension-accelerate": "^3.0.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.5",
    "bun-types": "latest",
    "prisma": "^5.19.1",
    "typescript": "^5.3.3"
  }
}